---
import styles from '../styles/button.module.scss';

interface Props {
  class?: string;
  id?: string;
  href: string;
}

const { class: classes, id, href } = Astro.props;
---

<a
  class:list={[classes, styles.btn]}
  id={id || ''}
  href={href}
>
  <slot />
</a>

<style lang="scss">
  a {
    font-size: smaller;
    text-decoration: none;
  }
</style>