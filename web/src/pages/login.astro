---
import AnchorButton from '../components/AnchorButton.astro';
import LoggedOutLayout from '../layouts/LoggedOutLayout.astro';

import '../styles/form.scss';
---

<script>
  import { isLoggedIn, isLoggedInAsAdmin, isLoggedInAsExternalPartner } from '../utils/auth';

  if (isLoggedInAsAdmin()) {
    window.location.assign('/');
  } else if (isLoggedInAsExternalPartner()) {
    window.location.assign('/invite');
  } else if (isLoggedIn()) {
    window.location.assign('/upload');
  }
</script>

<LoggedOutLayout title="Content Commons Login">
  <AnchorButton class="login-btn" href={'/admin-login'}>Department of State Login</AnchorButton>
  <AnchorButton class="login-btn" href={'/partner-login'}>External Partner Login</AnchorButton>
</LoggedOutLayout>

<style>
  .login-btn {
    padding: 1rem;
    margin: 1em;
    min-width: 20em;
    text-align: center;
    font-weight: bold;
  }
</style>
