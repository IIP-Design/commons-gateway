{
    "$id": "event.schema.json",
    "title": "Event Body Format for Support Staff Request Email",
    "description": "Minimum data required to send an email based on a support staff request event",
    "type": "object",
    "properties": {
        "contentCommonsUser": { "$ref": "#/$defs/user" },
        "externalTeamLead": { "$ref": "#/$defs/user" },
        "supportStaffuser": { "$ref": "#/$defs/user" },
        "url": { "type": "string", "minLength": 11 }
    },
    "required": [ "contentCommonsUser", "externalTeamLead", "supportStaffuser" ],
    "additionalProperties": false,
    "$defs": {
        "user": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email",
                    "minLength": 6,
                    "maxLength": 127
                },
                "givenName": {
                    "description": "The given (first) name of the user",
                    "type": "string",
                    "minLength": 1
                },
                "familyName": {
                    "description": "The family (last) name of the user",
                    "type": "string",
                    "minLength": 1
                }
            },
            "required": [ "email", "givenName", "familyName" ],
            "additionalProperties": false
        }
    }
}
