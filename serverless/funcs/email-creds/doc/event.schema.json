{
    "$id": "event.schema.json",
    "title": "Event Body Format for Account Email",
    "description": "Minimum data required to send an email based on an account creation event",
    "type": "object",
    "properties": {
        "email": {
            "type": "string",
            "format": "email",
            "minLength": 6,
            "maxLength": 127
        },
        "givenName": {
            "description": "The given (first) name of the user",
            "type": "string",
            "minLength": 1
        },
        "familyName": {
            "description": "The family (last) name of the user",
            "type": "string",
            "minLength": 1
        },
        "tmpPassword": {
            "type": "string",
            "minLength": 8,
            "maxLength": 256
        },
        "url": {
            "type": "string",
            "minLength": 12,
            "maxLength": 1000
        }
    },
    "required": [ "email", "givenName", "familyName", "tmpPassword", "url" ],
    "additionalProperties": false
}