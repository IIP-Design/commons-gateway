{
    "$id": "event.schema.json",
    "title": "Event Body Format for Account Email",
    "description": "Minimum data required to send an email based on an account creation event",
    "type": "object",
    "properties": {
        "invitee": { "$ref": "#/$defs/user" },
        "inviter": { "$ref": "#/$defs/user" },
        "tmpPassword": {
            "type": "string",
            "minLength": 8,
            "maxLength": 256
        },
        "url": {
            "type": "string",
            "minLength": 12,
            "maxLength": 1000
        }
    },
    "required": [ "invitee", "url" ],
    "additionalProperties": false,
    "$defs": {
        "user": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email",
                    "minLength": 6,
                    "maxLength": 127
                },
                "givenName": {
                    "description": "The given (first) name of the user",
                    "type": "string",
                    "minLength": 1
                },
                "familyName": {
                    "description": "The family (last) name of the user",
                    "type": "string",
                    "minLength": 1
                }
            },
            "required": [ "email", "givenName", "familyName" ],
            "additionalProperties": false
        }
    }
}
