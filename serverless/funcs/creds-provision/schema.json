{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "event.schema.json",
  "title": "Event Body Format for Admin Create",
  "description": "Data required to create a new admin user",
  "type": "object",
  "properties": {
    "inviter": {
      "type": "string",
      "format": "email",
      "minLength": 6,
      "maxLength": 127
    },
    "invitee": {
      "type": "object",
      "email": { "$ref": "#/$defs/invitee" },
      "givenName": { "$ref": "#/$defs/invitee" },
      "familyName": { "$ref": "#/$defs/invitee" },
      "team": { "$ref": "#/$defs/invitee" }
    }
  },
  "required": ["email", "givenName", "familyName", "team"],
  "additionalProperties": false,
  "$defs": {
    "invitee": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "minLength": 6,
          "maxLength": 127
        },
        "givenName": {
          "description": "The given (first) name of the user",
          "type": "string",
          "minLength": 1
        },
        "familyName": {
          "description": "The family (last) name of the user",
          "type": "string",
          "minLength": 1
        },
        "team": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["email", "givenName", "familyName", "team"],
      "additionalProperties": false
    }
  }
}
